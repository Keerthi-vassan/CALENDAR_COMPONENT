{
  "compilerOptions": {
    /* ===== Base ===== */
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    /* ===== Target & Environment ===== */
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* ===== Type Safety ===== */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    /* ===== Module Resolution ===== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* ===== JSX ===== */
    "jsx": "react-jsx",
    /* ===== Performance ===== */
    "incremental": true,
    /* ===== Next.js ===== */
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* ===== Path Aliases ===== */
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@lib/*": [
        "src/app/lib/*"
      ]
    },
    "allowJs": true
  },
  /* ===== Files ===== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
